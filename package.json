{
  "private": true,
  "name": "atjson",
  "devDependencies": {
    "@types/jest": "^23.0.2",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-monorepo": "^0.1.0",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "build": "lerna run build",
    "docs": "typedoc",
    "publish": "lerna publish",
    "test": "./node_modules/jest/bin/jest.js"
  },
  "workspaces": [
    "packages/@atjson/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "(@atjson/.*)": "<rootDir>/packages/$1/src/index.ts"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*-test.(ts|tsx)"
    ]
  }
}
