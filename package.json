{
  "private": true,
  "name": "atjson",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "lerna": "^3.4.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typedoc-plugin-monorepo": "^0.1.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "express": "^4.16.3",
    "parcel-bundler": "1.9.7"
  },
  "scripts": {
    "build": "lerna run build",
    "docs": "typedoc",
    "publish": "lerna publish",
    "test": "./node_modules/jest/bin/jest.js"
  },
  "workspaces": [
    "packages/@atjson/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run build"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "moduleNameMapper": {
      "(@atjson/.*)": "<rootDir>/packages/$1/src/index.ts"
    },
    "testURL": "http://localhost",
    "preset": "ts-jest",
    "testMatch": [
      "**/*-test.(ts|tsx|js)"
    ]
  }
}
