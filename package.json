{
  "private": true,
  "name": "atjson",
  "devDependencies": {
    "@atjson/conventional-commits": "^0.8.4",
    "@types/jest": "^22.2.3",
    "husky": "^1.0.0-rc.13",
    "jest": "^22.4.2",
    "lerna": "^2.8.0",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typedoc-plugin-monorepo": "^0.1.0",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "build": "lerna run build",
    "docs": "typedoc",
    "publish": "lerna publish",
    "test": "./node_modules/jest/bin/jest.js"
  },
  "workspaces": [
    "packages/@atjson/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run build"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "(@atjson/.*)": "<rootDir>/packages/$1/src/index.ts"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*-test.(ts|tsx)"
    ]
  }
}
